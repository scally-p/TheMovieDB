<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmerFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:duration="800">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="12dp">

        <View
            android:id="@+id/anchor"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/_title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="134dp"
            android:layout_marginEnd="12dp"
            android:background="@color/cccccc"
            app:layout_constraintBottom_toTopOf="@+id/_ratingBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/_anchor"
            app:layout_constraintVertical_chainStyle="packed" />

        <View
            android:id="@+id/_ratingBar"
            android:layout_width="180dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:background="@color/cccccc"
            app:layout_constraintBottom_toBottomOf="@+id/_anchor"
            app:layout_constraintStart_toStartOf="@+id/_title"
            app:layout_constraintTop_toBottomOf="@+id/_title" />

        <View
            android:id="@+id/_genre"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:background="@color/cccccc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/_ratingBar" />

        <View
            android:id="@+id/_releaseDate"
            android:layout_width="125dp"
            android:layout_height="12dp"
            android:layout_marginTop="5dp"
            android:background="@color/cccccc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/_genre" />

        <View
            android:id="@+id/_duration"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/cccccc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/_releaseDate" />

        <ImageView
            android:id="@+id/_poster2"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginTop="30dp"
            android:background="@color/cccccc"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/_duration" />

        <View
            android:id="@+id/overviewLabel"
            android:layout_width="125dp"
            android:layout_height="20dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="30dp"
            android:background="@color/cccccc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poster2" />

        <View
            android:id="@+id/overview"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="14dp"
            android:background="@color/cccccc"
            app:layout_constraintTop_toBottomOf="@+id/overviewLabel" />

        <View
            android:id="@+id/homepage"
            android:layout_width="250dp"
            android:layout_height="15dp"
            android:layout_margin="14dp"
            android:background="@color/cccccc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/overview" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>